<h1>Mensajes de Contacto</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Remitente</th>
      <th>Nombre</th>
      <th>Contenido</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @message.each do |kek| %>
      <tr>
      <% usuario = User.find_by_id(kek.from_id) %>
      <td><%= usuario.email %></td>
      <td><%= kek.message.split(":")[0] %></td>
      <td><%= kek.message.split(":")[1] %></td>
      <td><%= link_to raw(('<i class="fa fa-fw fa-trash-o"></i>')+' Eliminar') , "messages/#{kek.id}", method: :delete, data: { confirm: "Estas seguro de borrar este mensaje?"}, class: "btn btn-xs btn-danger", style: "color:#fff"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
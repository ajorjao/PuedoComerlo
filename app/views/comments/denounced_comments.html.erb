<h1>Comentarios denunciados</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.title %></td>
        <td><%= comment.description %></td>
        <td><%= comment.likes %></td>
        <td><%= comment.dislikes %></td>
        <td><%= button_to 'Ver', "comments/#{comment.id.to_s}/edit", method: :get %></td>
        <td><%= link_to raw(('<i class="fa fa-fw fa-trash-o"></i>')+' Eliminar') , "comments/#{comment.id.to_s}", method: :delete, data: { confirm: "Estas seguro de borrar este comentario?"}, class: "btn btn-xs btn-danger", style: "color:#fff"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
       <td><%= product.name %></td>
        <td><%= link_to 'Ver', "products/#{product.id.to_s}/edit" %></td>
        <td><%= link_to 'Eliminar', "products/:id", method: :delete, data: { confirm: "Estas seguro de borrar #{product.name}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Productos sugeridos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Codigo de Barras</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggested_products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.id %></td>
        <td><%= button_to 'Ver', "products/#{product.id.to_s}", method: :get %></td>
        <td><%= link_to raw(('<i class="fa fa-fw fa-trash-o"></i>')+' Eliminar') , "product/#{product.id.to_s}", method: :delete, data: { confirm: "Estas seguro de borrar #{product.name}?"}, class: "btn btn-xs btn-danger", style: "color:#fff"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
